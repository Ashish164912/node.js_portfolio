<%- include("01.header.ejs") %>

    <div class="row bg-white ">
        <h3 style="font-family:  sans-serif;" class="text-secondary"></h3>
        <h4 class="text-secondary mb-2">Professional Experience update Page</h4>
        <div class="col-md-12 " style="border-radius: 20px;box-shadow: inset 0px 0px 10px black;">
            <form action="/admin/update_prof_exp_resume" method="post" enctype="multipart/form-data">


                <div class="row p-2">

                   
                    <div class=" col">
                        <label class="mb-2 pt-2 text-dark">Professional Experience Title</label>
                        <input type="text" class="form-control border border-danger" name="id" value="<%=  resume_prof_exp.id %>" hidden>

                        <input type="text" class="form-control border border-danger" name="resume_prof_Expe_title"
                        value="<%=  resume_prof_exp.resume_prof_Expe_title %>">

                    </div>
                    <div class="col">
                        <label class="mb-2 pt-2 text-dark">Present Date</label>
                        <input type="text" class="form-control border border-danger" name="resume_present_date"
                        value="<%=  resume_prof_exp.resume_present_date %>">
                    </div>
                       <div class="col">
                        <label class="mb-2 pt-2 text-dark">Company Name</label>
                        <input type="text" class="form-control border border-danger" name="resume_company_name"
                        value="<%=  resume_prof_exp.resume_company_name %>">
                    </div>
                </div>

                <div class="row p-2">
                   <div class="col">
                        <label class="mb-2 pt-2 text-dark">Professional decription</label>
                        <textarea class="form-control border border-danger" name="resume_prof_decription"
                        ><%=  resume_prof_exp.resume_prof_decription %></textarea>
                    </div>

                </div>

                    <div class="row p-4">
                        <div class="col text-center">

                            <button class="btn btn-success">update resume Professional Experience</button>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>

    <%- include("02.footer.ejs") %>